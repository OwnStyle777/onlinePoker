<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

<Properties>
        <Property name="logFileName">logs/log4j2-${date:yyyy-MM-dd}.log</Property>
    </Properties>
    <Appenders>
        <!-- Console Appender -->
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <!-- Rolling File Appender -->
        <RollingFile name="FILE" fileName="${logFileName}" filePattern="logs/log4j2-%d{yyyy-MM-dd}.%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>  <!-- Logger for File appender with DEBUG level -->
        <Logger name="com" level="debug" additivity="false">
            <AppenderRef ref="FILE" />
        </Logger>

        <!-- Root logger with INFO level for Console appender -->
        <Root level="info">
            <AppenderRef ref="CONSOLE" />
                  </Root>
    </Loggers>
</Configuration>